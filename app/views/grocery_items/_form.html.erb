<%= form_with model: [grocery_list, grocery_item] , id: "form" do |form| %>
  <% if form.object.errors.any? %>
    <div> 
      <%= form.object.errors.full_messages.each do |message| %>
        <%= render "shared/alert", alert: message %>
      <% end %>
    </div>
  <% end %>

  <div class="flex flex-col">
    <div class="flex flex-row mb-2">
      <div class="flex-1 mr-2">
        <%= form.label :name, class: "text-lg text-grey-600" %>
        <%= form.text_field :name, class: "border py-2 px-3 w-full" %>
      </div>
      <div>
        <%= form.label :amount, class: "text-lg text-grey-600" %>
        <%= form.number_field :amount, class: "border py-2 px-3", step: 1 %>
      </div>
    </div>
    <div class="actions">
      <%= form.submit "Add Item", class:"w-full bg-purple-500 hover:bg-purple-700 text-white uppercase text-lg mx-auto p-4 rounded" %>
    </div>
  <div>
  
  
<% end %>