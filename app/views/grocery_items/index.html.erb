<p id="notice"><%= notice %></p>

<h1>Grocery Items</h1>

<table>
  <thead>
    <tr>
      <th>Grocery list</th>
      <th>User</th>
      <th>Name</th>
      <th>Amount</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grocery_items.each do |grocery_item| %>
      <tr>
        <td><%= grocery_item.grocery_list_id %></td>
        <td><%= grocery_item.user_id %></td>
        <td><%= grocery_item.name %></td>
        <td><%= grocery_item.amount %></td>
        <td><%= grocery_item.active %></td>
        <td><%= link_to 'Show', grocery_item %></td>
        <td><%= link_to 'Edit', edit_grocery_item_path(grocery_item) %></td>
        <td><%= link_to 'Destroy', grocery_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

