<%= form_with model: [@grocery_list, @invitation], url: grocery_list_invitations_path do |form| %>
  <% if @invitation.errors.any? %>
    <div id="error_explanation">
        <% @invitation.errors.each do |error| %>
          <%= render "shared/alert", alert: error.full_message %>
        <% end %>
    </div>
  <% end %>

  <div class="field flex flex-col mb-4">
    <%= form.label "Enter email", class: "text-lg text-grey-600" %>
    <%= form.email_field :invitee, class: "border py-2 px-3" %>
  </div>

  <div class="actions">
    <%= form.submit class:"w-full bg-purple-500 hover:bg-purple-700 text-white uppercase text-lg mx-auto p-4 rounded" %>
  </div>
<% end %>
