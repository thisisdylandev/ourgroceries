<h2 class="block w-full text-center text-xl mb-6 text-grey-600">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field flex flex-col mb-4">
    <%= f.label :email, class: "text-lg text-grey-600" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border py-2 px-3" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"block bg-yellow-500 hover:bg-yellow-700 text-white uppercase text-lg mx-auto p-4 rounded" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
