<%= form_with(model: grocery_list) do |form| %>
  <% if grocery_list.errors.any? %>
    <div id="error_explanation">
        <% grocery_list.errors.each do |error| %>
          <%= render "shared/alert", alert: error.full_message %>
        <% end %>
    </div>
  <% end %>

  <div class="field flex flex-col mb-4">
    <%= form.label :name, class: "text-lg text-grey-600" %>
    <%= form.text_field :name, class: "border py-2 px-3" %>
  </div>

  <div class="actions">
    <%= form.submit class:"w-full bg-purple-500 hover:bg-purple-700 text-white uppercase text-lg mx-auto p-4 rounded" %>
  </div>
<% end %>
