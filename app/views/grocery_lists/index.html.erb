<%= render "shared/notice", notice: notice %>

<h1 class="block w-full text-center text-xl mb-6 text-grey-600">Grocery Lists</h1>

<%= turbo_stream_from "grocery_lists" %>
<div id="grocery_lists">
  <%= render @grocery_lists %>
</div>

<% if @invitations.count > 0 %>
  <hr class="h-px my-6"/>
  <h2 class="block w-full text-center text-xl mb-6 text-grey-600">Pending Invitations</h2>
  <%= render @invitations %>
<% end %>